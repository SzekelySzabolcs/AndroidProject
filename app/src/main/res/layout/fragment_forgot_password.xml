<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#161616"
    android:layout_height="match_parent"
    tools:context=".fragment.Forgot_password">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="287dp"
        android:layout_marginTop="108dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/login_dialo"
        >
    <TextView
        android:layout_width="wrap_content"
        android:text="Forgot password"
        android:textColor="@color/white"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        />

        <TextView
            android:layout_width="wrap_content"
            android:text="We will send you an email with instructions on how to reset your password."
            android:textColor="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="88dp"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_Input_Layout_Email"
            android:layout_width="match_parent"
            android:layout_marginTop="134dp"
            android:layout_marginStart="40dp"
            android:textColorHint="@color/white"
            android:layout_marginEnd="40dp"
            android:layout_height="wrap_content"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/test_Input_EditText_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:background="@drawable/rectangle"
                >

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/Email_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="219dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/button_email" />
    </RelativeLayout>


</FrameLayout>